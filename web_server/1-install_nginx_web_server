#!/usr/bin/env bash
# This script installs and configures Nginx web server on Ubuntu

# Update package list and install Nginx
apt-get update
apt-get install -y nginx

# Configure Nginx to serve a custom page at root
echo "Holberton School for the win!" > /var/www/html/index.nginx-debian.html

# Ensure Nginx is configured to listen on port 80 (default)
# Start Nginx service
service nginx start

# Check if Nginx is running, if not start it
if ! pgrep -x "nginx" > /dev/null; then
    service nginx start
else
    service nginx restart
fi
