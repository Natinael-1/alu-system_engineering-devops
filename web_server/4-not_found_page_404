#!/usr/bin/env bash
# Configures NGINX to show a custom 404 page saying "Ceci n'est pas une page"

apt-get update -y
apt-get install nginx -y

service nginx start

# Create custom 404 page
echo "Ceci n'est pas une page" > /var/www/html/404.html

# Add error_page directive to NGINX config
CONFIG_FILE="/etc/nginx/sites-available/default"
grep -q "error_page 404" $CONFIG_FILE || \
sed -i '/server_name _;/a \    error_page 404 /404.html;\n    location = /404.html {\n        root /var/www/html;\n        internal;\n    }' $CONFIG_FILE

# Restart NGINX to apply configuration
service nginx restart
