#!/usr/bin/env bash
# Configures a new Ubuntu machine to redirect /redirect_me and have a custom 404 page

set -e

# Update and install nginx
apt-get update -y
apt-get install nginx -y

# Start nginx service
service nginx start

# Allow Nginx through firewall
ufw allow 'Nginx HTTP' 2>/dev/null || true

# Set ownership
chown -R "$USER":"$USER" /var/www/html
chmod -R 755 /var/www

# Create index page
echo "Hello World!" > /var/www/html/index.html

# Create custom 404 page (no trailing newline)
printf "Ceci n'est pas une page" > /var/www/html/error_404.html

# Backup default config
cp /etc/nginx/sites-available/default /etc/nginx/sites-available/default.bckp 2>/dev/null || true

# Configure nginx with redirect and custom 404
cat > /etc/nginx/sites-available/default << 'EOF'
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;

    server_name _;

    location / {
        try_files $uri $uri/ =404;
    }

    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }

    error_page 404 /error_404.html;
    location = /error_404.html {
        root /var/www/html;
    }
}
EOF

# Test nginx configuration
nginx -t

# Restart nginx
service nginx restart
