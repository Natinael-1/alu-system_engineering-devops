#!/usr/bin/env bash
# Configures Nginx to redirect /redirect_me to another page (301)

apt-get update -y
apt-get install nginx -y

# Add redirect in the default server block
sed -i '/server_name _;/a \\tlocation /redirect_me {\n\t\treturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\t}' /etc/nginx/sites-available/default

# Restart nginx without systemctl
service nginx restart
