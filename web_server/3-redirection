#!/usr/bin/env bash
# Configure Nginx to add a 301 redirect

apt-get update -y
apt-get install -y nginx

echo "Holberton School for the win!" | tee /var/www/html/index.html > /dev/null

# Insert redirect block using sed (multiline, Shellcheck-safe)
sed -i "/server_name _;/a \
    location /redirect_me {\n\
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\
    }" /etc/nginx/sites-available/default

service nginx restart
